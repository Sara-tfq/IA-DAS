@base <http://ia-das.org/mapping#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix iadas: <http://ia-das.org/onto#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# ============================================
# Mapping simple pour la hiérarchie des variables
# ============================================

# Mapping pour CLASS (niveau racine)
<#VariableClass>
    rml:logicalSource [
        rml:source "data-csv-converted/Class-Hierarchy-V1-cleaned.csv" ;
        rml:referenceFormulation ql:CSV
    ] ;
    
    rr:subjectMap [
        rr:template "http://ia-das.org/onto#{CLASS}" ;
        rr:class owl:Class
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:subClassOf ;
        rr:objectMap [ rr:constant iadas:Variable ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [ rml:reference "CLASS" ]
    ] .

