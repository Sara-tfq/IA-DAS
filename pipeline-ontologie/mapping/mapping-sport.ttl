        rr:template "http://ia-das.org/onto#{Sub class 2}" ;
        rr:class owl:Class
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:subClassOf ;
        rr:objectMap [ rr:template "http://ia-das.org/onto#{Class 1}" ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [ rml:reference "Sub class 2" ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate rdfs:comment ;
        rr:objectMap [ rml:reference "Definition" ]
    ] ;
    
    rr:predicateObjectMap [
        rr:predicate dcterms:source ;
        rr:objectMap [ rml:reference "Références" ]
    ] .

